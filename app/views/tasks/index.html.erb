<p style="color: green"><%= notice %></p>

<h1><%= @project.name %> - Tasks</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Due Date</th>
      <th>Complete</th>
      <th>Overdue</th>
      <th>Status</th>
    </tr>
    <tbody> 
      <% @tasks.each do |task| %>
        <tr>
          <% date = "#{task.year}-#{task.month}-#{task.day}" %>
          <% overdue = Date.today.to_s > date && !task.complete %>
          <td><%= link_to task.name, [@project, task] %></td>
          <td><%= date %></td>
          <td><%= task.complete %></td>
          <td><%= overdue %></td>
          <td>
            <% if task.complete %>
              &#10004; <!-- Checkmark symbol -->
            <% elsif overdue %>
              &#10008; <!-- Cross symbol -->
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </thead>
</table>

<%= link_to "New task", new_project_task_path %>