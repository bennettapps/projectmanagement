<p style="color: green"><%= notice %></p>

<h1><%= @project.name %> - Tasks</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Due Date</th>
      <th>Complete</th>
      <th>Overdue</th>
      <th>Status</th>
    </tr>
    <tbody> 
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.name, [@project, task] %></td>
          <td><%= "#{task.year}-#{task.month}-#{task.day}" %></td>
          <td><%= task.complete %></td>
          <td><%= "true/false" %></td>
          <td><%= "" %></td>
        </tr>
      <% end %>
    </tbody>
  </thead>
</table>

<%= link_to "New task", new_project_task_path %>